{
  "manifest_version": 3,
  "name": "ShadowChrome",
  "description": "Browser-only Shadowsocks proxy via native messaging.",
  "version": "0.1",
  "action": {
    "default_title": "ShadowChrome",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "proxy", "nativeMessaging"],
  "background": {
    "service_worker": "background.js"
  }
}
